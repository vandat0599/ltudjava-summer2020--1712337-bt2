
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/student_manager</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <mapping class="studentmanager.pojo.LopHoc" />
        <mapping class="studentmanager.pojo.Diem" />
        <mapping class="studentmanager.pojo.MonHoc" />
        <mapping class="studentmanager.pojo.User" />
        <mapping class="studentmanager.pojo.SinhVien" />
    </session-factory>
</hibernate-configuration>